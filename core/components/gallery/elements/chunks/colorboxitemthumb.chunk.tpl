        <li>
            <a class="thumb" name="[[+name]]" href="[[+image]]" title="[[+name]]" rel="colorboxThumb">
                <img src="[[+thumbnail]]" alt="[[+name]]" />
            </a>
            <div class="caption">
                <div class="image-title">[[+name]]</div>
                [[+description:notempty=`<div class="image-desc">[[+description]]</div>`]]
                [[+tags:notempty=`<div class="image-tags"><em>[[%gallery.tags]]:</em> [[+tags]]<div>`]]
            </div>
        </li>